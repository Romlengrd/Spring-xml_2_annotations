<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="frostWolf" class="com.andreitop.xml.mount.Wolf"/>
    <!--can be inside property/constructor namespaces-->
    <bean id="shadowTiger" class="com.andreitop.xml.mount.Tiger"/>

    <bean id="knight" class="com.andreitop.xml.unit.Human">
        <!--use index for more than one references or names with bean id-->
        <constructor-arg value="soulBlade" index="2"/>
        <constructor-arg value="thunderFury" index="1"/>
        <constructor-arg ref="shadowTiger" />
    </bean>
</beans>




